                @Html.EditorFor(model => model.DescProduto, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DescProduto, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
